<h1 class="pb-4">Ket qua tim kiem</h1>


<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
    <% if(details != '') { %> 
        <% details.forEach(function(details, index) { %>
            <a href="/details/<%= details._id %>" class="col text-center category__link">
                <div class="category__img shadow">
                    <img src="/uploads/<%= details.image %>" alt="<%= details.name %>" loading="lazy">
                </div>
                <div class="pt-1"><%= details.name %></div>
            </a>
        <% }) %>
    <% } else { %>
        <p>No items found.</p>
    <% } %>
</div>